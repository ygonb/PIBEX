#include <main.h>
int16 analogico;
void main()
{
   setup_adc_ports(sAN0);
   setup_adc(ADC_CLOCK_INTERNAL);

   while(TRUE)
   {
     set_adc_channel(0);// seleciona qual entrada analógica será lida
     delay_us(10);
     analogico= read_adc();// variável= valor da entrada analógica
     delay_ms(1000);
   }

}
