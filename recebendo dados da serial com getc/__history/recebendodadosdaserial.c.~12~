#include <recebendodadosdaserial.h>
char informacao;
void main()
{

   while(TRUE)
   {
      if (kbhit()){ //é verdadeiro se tem alguma inf na porta serial
                   informacao=getc();//pega o caractere da serial  
                    if (informacao=="b"){ output_high(pin_gp3);}
                    if (informacao=="a"){ output_low(pin_gp3);} 
                   }     
   }

}
