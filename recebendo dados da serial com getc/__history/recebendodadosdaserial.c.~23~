#include <recebendodadosdaserial.h>
char caracter;

void main()
{
   
   while(TRUE)
   {
      if (kbhit()){ //é verdadeiro se tem alguma inf na porta serial
                   caracdter=getc();//pega o caractere da serial
                    printf(caracter);
                    
                    if (caracter=="a"){ output_high(pin_a4);}
                    if (caracter=="b"){output_low(pin_a4);}
                   }     
   }
   output_high(pin_a4);
   delayms (1000);
   output_low(pin_a4);

}
